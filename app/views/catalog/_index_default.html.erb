<%# default partial to display solr document fields in catalog index view -%>
<dl class="document-metadata dl-horizontal dl-invert">

  <% work_type = document[:human_readable_type_tesim].first %>
  <% vocabs =  I18n.t work_type + '.fields' %>

  <% vocabs.each do |vocab, fields| %>
      <% fields.each do |key, value| %>
          <% if document.has_metadata_key?(key) && value[:views].include?('index') %>
              <dt class="blacklight-<%= key %>"><%= value[:label] %></dt>
              <dd class="blacklight-<%= key %>"><%= document.metadata_value(key).to_sentence %></dd>
          <% end %>
      <% end %>
  <% end %>

</dl>
